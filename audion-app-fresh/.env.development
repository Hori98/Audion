# Development Environment Configuration
# Audion Frontend - Development Settings

# API Configuration
# Production API URL (when not using local backend)
EXPO_PUBLIC_PROD_API_URL=https://audion.onrender.com

# Development API Port (used for local backend)
# Use the same port as backend (see SERVER_PORTS.md)
EXPO_PUBLIC_DEV_API_PORT=8003

# API Timeout (in milliseconds)
EXPO_PUBLIC_API_TIMEOUT=60000

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Feature Flags
EXPO_PUBLIC_MOCK_DATA_FALLBACK=false
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true

# App Configuration
EXPO_PUBLIC_APP_NAME=Audion Development
EXPO_PUBLIC_APP_VERSION=1.0.0-dev
