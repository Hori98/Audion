# Development Environment Configuration
# Audion Frontend - Development Settings

# API Configuration
# Use Render production URL for Tunnel mode development
# (Tunnel runs in cloud, cannot reach localhost)
EXPO_PUBLIC_API_BASE_URL=https://audion.onrender.com
EXPO_PUBLIC_API_TIMEOUT=30000

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Feature Flags
EXPO_PUBLIC_MOCK_DATA_FALLBACK=true
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true

# App Configuration
EXPO_PUBLIC_APP_NAME=Audion Development
EXPO_PUBLIC_APP_VERSION=1.0.0-dev
